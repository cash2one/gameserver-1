<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!--可创建帮派的最低等级-->
    <createFactionLevel>2</createFactionLevel>
	<!--可申请加入帮派的最低级别-->
	<applyLevel>2</applyLevel>
    <!--帮派创建消耗-->
    <createFactionCostProp id="1020" num="1"/>
    <createFactionCostMoney id="1" num="1000"/>

    <!--帮派级别,levelItem按级别由小到大-->
    <level max="10">
        <!--本帮派级别对应的最多成员数，副帮主数，  多少经验值可升到下一级,如果为零就不能再升级-->
        <levelItem memberNum="3" viceLeaderNum="1" exp="100"/>
        <levelItem memberNum="5" viceLeaderNum="2" exp="100"/>
        <levelItem memberNum="10" viceLeaderNum="3" exp="200"/>
        <levelItem memberNum="11" viceLeaderNum="3" exp="300"/>
        <levelItem memberNum="12" viceLeaderNum="3" exp="400"/>
        <levelItem memberNum="13" viceLeaderNum="3" exp="500"/>
        <levelItem memberNum="14" viceLeaderNum="3" exp="600"/>
        <levelItem memberNum="15" viceLeaderNum="4" exp="700"/>
        <levelItem memberNum="16" viceLeaderNum="4" exp="800"/>
        <levelItem memberNum="17" viceLeaderNum="4" exp="0"/>
    </level>
</root>
